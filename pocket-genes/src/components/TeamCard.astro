---
const {src, alt, text, description} = Astro.props
---

<div class="team-card">
    <div class="card-inner">
        <div class="image-wrapper">
            <img class="image-card" src={src} alt={alt} />
            <div class="image-overlay">
                <div class="role-badge">
                    <span>{description}</span>
                </div>
            </div>
        </div>
        <div class="card-content">
            <h3 class="member-name">{text}</h3>
            <p class="member-role">{description}</p>
            <div class="member-skills">
                <span class="skill-tag">Leadership</span>
                <span class="skill-tag">Innovation</span>
            </div>
        </div>
    </div>
</div>

<style>
    .team-card {
        background: var(--glass-bg);
        backdrop-filter: blur(20px);
        border: 1px solid var(--glass-border);
        border-radius: 2rem;
        padding: 2rem;
        box-shadow: var(--glass-shadow);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        max-width: 320px;
        position: relative;
        overflow: hidden;
    }

    .team-card:hover {
        transform: translateY(-15px) scale(1.02);
        box-shadow: 
            0 40px 80px -12px rgba(31, 38, 135, 0.6),
            0 0 0 1px rgba(255, 255, 255, 0.25);
        background: rgba(255, 255, 255, 0.18);
    }

    .card-inner {
        position: relative;
        z-index: 2;
    }

    .image-wrapper {
        position: relative;
        border-radius: 1.5rem;
        overflow: hidden;
        margin-bottom: 1.5rem;
    }

    .image-card {
        width: 100%;
        height: 280px;
        object-fit: cover;
        object-position: center;
        border-radius: 1.5rem;
        transition: all 0.4s ease;
    }

    .team-card:hover .image-card {
        transform: scale(1.1);
        filter: brightness(1.1);
    }

    .image-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            45deg, 
            rgba(240, 147, 251, 0.4) 0%, 
            rgba(103, 126, 234, 0.3) 100%
        );
        opacity: 0;
        transition: opacity 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .team-card:hover .image-overlay {
        opacity: 1;
    }

    .role-badge {
        background: var(--glass-bg);
        backdrop-filter: blur(16px);
        border: 1px solid var(--glass-border);
        padding: 0.75rem 1.5rem;
        border-radius: 2rem;
        transform: translateY(20px);
        transition: transform 0.3s ease;
        box-shadow: var(--glass-shadow);
    }

    .team-card:hover .role-badge {
        transform: translateY(0);
    }

    .role-badge span {
        color: var(--text-primary);
        font-weight: 600;
        font-size: 1rem;
    }

    .card-content {
        text-align: center;
    }

    .member-name {
        font-size: 1.5rem;
        font-weight: 700;
        background: var(--primary-gradient);
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 0.5rem;
        line-height: 1.3;
    }

    .member-role {
        color: var(--text-secondary);
        font-size: 1rem;
        font-weight: 500;
        margin-bottom: 1.5rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .member-skills {
        display: flex;
        justify-content: center;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    .skill-tag {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(8px);
        border: 1px solid rgba(255, 255, 255, 0.15);
        padding: 0.375rem 0.75rem;
        border-radius: 1rem;
        font-size: 0.75rem;
        font-weight: 500;
        color: var(--text-accent);
        transition: all 0.3s ease;
    }

    .skill-tag:hover {
        background: rgba(255, 255, 255, 0.2);
        transform: translateY(-2px);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .team-card {
            padding: 1.5rem;
            max-width: 280px;
        }

        .image-card {
            height: 220px;
        }

        .member-name {
            font-size: 1.25rem;
        }

        .member-role {
            font-size: 0.9rem;
        }

        .skill-tag {
            font-size: 0.7rem;
            padding: 0.25rem 0.5rem;
        }
    }

    @media (max-width: 480px) {
        .team-card {
            padding: 1.25rem;
            max-width: 250px;
        }

        .image-card {
            height: 200px;
        }

        .member-name {
            font-size: 1.15rem;
        }

        .member-skills {
            gap: 0.5rem;
        }
    }
</style>