---
const { title, description, color } = Astro.props;
---

<div class="list_item" style={"color:" + color}>
    <span class="bullet_point">&#8226;</span>
    <div>
        <p class="title">{title} <span>-</span></p> 
        <p class="description">{description}</p>
    </div>
</div>

<style>
    .list_item {
        display: flex;
        margin: 1.75rem 0 1.75rem 0;
    }

    .title {
        font-size: 1.75rem;
        font-weight: bold;
        margin: 0 0 0.5rem 0;
    }

    .description {
        font-size: 1.25rem;
        margin: 0;
    }

    .bullet_point {
        font-size: xx-large;
        padding-bottom: 3rem;
        padding-right: 0.5rem;
    }

</style>