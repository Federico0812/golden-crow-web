---
import DetailedPlan from "../components/DetailedPlan.astro";
import PlanSeparator from "../components/PlanSeparator.astro";
---

<div class="container">
  <h1 class="title">Choosing the Right Plan</h1>
  <div class="plans_container">
    <DetailedPlan
      title="Free"
      subtitle="<b>Integrate at zero cost,</b> allowing your users to explore to explore reports instantly in our app."
      items={[
        "$0 Cost",
        "User Report Access",
        "No Maintenance",
        "Instant Deployment",
        "Seamless Experience",
      ]}
    />
    <PlanSeparator />
    <DetailedPlan
      title="Plus"
      subtitle="Add <b>custom branding</b> with optimized data display and <b>priority feature requests.</b>"
      items={[
        "Custom Branding",
        "Optimized Data Display",
        "Data Formatting Support",
        "Priority Feature Requests",
        "Affordable Pricing",
      ]}
    />
    <PlanSeparator />
    <DetailedPlan
      title="Full"
      subtitle="Get a <b>fully branded</b> standalone app with <b>custom features</b> and <b>enterprise-level support.</b>"
      items={[
        "Fully Branded Experience",
        "Custom Features & UI",
        "Full Control Over User Data",
        "Advanced Integration Options",
        "Dedicated Team",
      ]}
      isHighlighted={true}
    />
  </div>
</div>

<style>
  .container {
    display: flex;
    flex-direction: column;
    height: auto;
    background-color: #f6f4ec;
    color: black;
  }

  .plans_container {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    margin: 2rem 4rem;
  }

  .title {
    font-size: 6rem;
    margin: 4rem 0 2rem 4rem;
  }

  @media screen and (max-width: 768px) {
    .container {
      padding: 2rem;
    }
    .plans_container {
      flex-direction: column;
      align-items: center;
    }

    .title {
      font-size: 3rem;
      margin: 2rem 0;
    }
  }
  @media (min-width: 769px) and (max-width: 1024px) {
    .container {
      height: auto;
      padding: 2rem;
    }
    .plans_container {
      flex-direction: column;
      align-items: center;
    }

    .title {
      font-size: 3rem;
      margin: 2rem 0;
    }
  }
</style>
