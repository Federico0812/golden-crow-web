---
import Card from "../components/Card.astro";
import Item from "../components/Item.astro";
---

<section id="screen3" class="body">
  <div class="container">
    <h1 class="title">More to come</h1>
    <h3 class="subtitle">
      Pocket Genes will continuously add new panels and tools to enhance user
      experience and genomic discovery.
    </h3>
    <ul>
        <Item title="Sports & Performance" description="Customized workout plans based on strength, endurance, and recovery traits."/>
        <Item title="Personality & Behavior" description="Genetic influences on emotions, decision-making addictions and habits."/>
        <Item title="Physical Traits" description="Explore inherited characteristics like hair, eye color, and skin response."/>
        <Item title="Cognitive Abilites" description="Uncover learning potential, memory, and problem-solving skills."/>
        <Item title="Endless Exploration" description="Access extra details on traits, genetic variants, and linked studies for deeper insights."/>
    </ul>
  </div>
  <div class="image-wrapper">
    <div class="image_row">
      <Card src="more1.png" alt="" text={"Sports & Performance"}/>
      <Card src="more2.png" alt="" text={"Personality & Behavior"}/>
      <Card src="more3.png" alt="" text={"Physical Traits"}/>
    </div>
    <div class="image_row">
        <Card src="more4.png" alt="" text={"Cognitive & Intelligence"}/>
        <Card src="more5.png" alt="" text={"Linked Variants & Studies"}/>
        <Card src="more6.png" alt="" text={"Deep Genome Insights"}/>
    </div>
  </div>
</section>

<style>
  .body {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: space-around;
    padding: 5rem 5%;
    position: relative;
    background: var(--dark-bg);
    background-image: 
      radial-gradient(circle at 30% 30%, rgba(79, 172, 254, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 70% 70%, rgba(240, 147, 251, 0.1) 0%, transparent 50%);
  }

  .container {
    flex: 1;
    max-width: 40%;
    color: var(--text-primary);
    position: relative;
    z-index: 2;
  }

  .title {
    font-size: clamp(3rem, 6vw, 5rem);
    font-weight: 800;
    background: var(--primary-gradient);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 1.5rem;
    margin-top: 0;
    line-height: 1.2;
  }

  .subtitle {
    font-size: clamp(1.1rem, 2.5vw, 1.75rem);
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  ul {
    padding: 0;
    margin: 0;
  }

  .image-wrapper {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    position: relative;
    z-index: 2;
  }

  .image_row {
    display: flex;
    flex-direction: row;
    gap: 1rem;
    width: 100%;
    justify-content: center;
  }

  /* Responsive Design */
  @media (max-width: 1200px) {
    .body {
      flex-direction: column;
      padding: 4rem 5%;
      gap: 4rem;
      text-align: center;
    }

    .container {
      max-width: 100%;
    }

    .image-wrapper {
      gap: 2rem;
    }

    .image_row {
      flex-wrap: wrap;
      gap: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .body {
      padding: 3rem 4%;
      gap: 3rem;
    }

    .image_row {
      flex-direction: column;
      align-items: center;
      gap: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .body {
      padding: 2rem 4%;
      gap: 2rem;
    }

    .image-wrapper {
      gap: 1.5rem;
    }
  }
</style>
