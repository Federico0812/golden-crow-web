---
import Quarter from "../components/Quarter.astro";
import Separator from "../components/Separator.astro";
---

<div class="container">
  <h1 class="title">Our Timeline</h1>
  <div class="quarter_container">
    <Quarter
      time="Q1 JAN-MAR"
      text_1="Product Development"
      text_2="iOS Launch"
      items={[
        "Core features ready",
        "Define standardized input data",
        "First partners onboard",
        "Launch on iOS",
      ]}
    />
    <Separator />
    <Quarter
      time="Q2 APR-JUN"
      text_1="Partner Integrations"
      text_2="First Users"
      items={[
        "New panels",
        "Access to genomics reports",
        "Learn Section",
        "Launch on Android",
      ]}
    />
    <Separator />
    <Quarter
      time="Q3 JUL-SEP"
      text_1="Expanding Features"
      text_2="Community Growth"
      items={[
        "Profile Section",
        "Community Section",
        "AI-Driven recommendations",
        "Expanded user interactions",
      ]}
    />
    <Separator />
    <Quarter
      time="Q4 OCT-DEC"
      text_1="Scale the product"
      text_2="Customize the experience"
      items={[
        "Link with papers and newsletters",
        "Gamification tools",
        "Improve panels",
        "Customized user experience",
      ]}
    />
  </div>
</div>

<style>
  .container {
    display: flex;
    flex-direction: column;
    background: #f6f4ec;
    height: 100vh;
  }

  .quarter_container {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
  }

  .title {
    color: black;
    font-size: 6rem;
    margin: 4rem 0 2rem 4rem;
  }

  @media screen and (max-width: 1440px) {
    .container {
      height: auto;
    }
    .title {
      font-size: 4rem;
      margin: 2rem 0 1rem 2rem;
    }
    .quarter_container {
      flex-direction: column;
      align-items: center;
    }
    .quarter_container > * {
      margin-bottom: 2rem;
    }
    
  }
</style>
