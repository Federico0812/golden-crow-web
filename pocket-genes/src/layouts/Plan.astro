---
import PlanCard from "../components/PlanCard.astro";
---

<div class="container">
  <h1 id="title">Flexible Plans to Fit Your Needs</h1>
  <div class="card_container">
    <PlanCard
      title="Pocket Genes Integration"
      text="Users load their data and explore reports in our standard app interface."
      subtext="A simple, no-cost solution for seamless integration."
      plan="Free"
      description="Basic Integration"
    />
    <PlanCard
      title="Branded Experience"
      text="Customize the Pocket Genes app with your branding and optimized data display."
      subtext="A great way to enhance user experience."
      plan="Plus"
      description="Custom Features"
    />
    <PlanCard
      title="Tailor-made Mobile App"
      text="A fully branded, standalone app with backend support and user management."
      subtext="The best choice for full customization."
      plan="Full"
      description="Mobile App Development"
      isHighlighted=true
    />
  </div>
</div>

<style>
  .container {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    min-height: 100vh;
    padding: 5rem 5%;
    background-color: var(--dark-surface);
    position: relative;
    overflow: hidden;
  }

  #title {
    color: var(--text-primary);
    font-size: clamp(2.5rem, 6vw, 5rem);
    font-weight: 800;
    background: var(--primary-gradient);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin: 0 0 3rem 0;
    line-height: 1.2;
    max-width: 80%;
  }

  .card_container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
    gap: 2rem;
    margin-top: auto;
  }

  /* Responsive Design */
  @media (max-width: 1200px) {
    .container {
      padding: 4rem 5%;
      text-align: center;
      align-items: center;
    }

    #title {
      max-width: 100%;
      margin-bottom: 3rem;
    }

    .card_container {
      flex-direction: column;
      align-items: center;
      gap: 2rem;
      margin-top: 0;
    }
  }

  @media (max-width: 768px) {
    .container {
      padding: 3rem 4%;
    }

    .card_container {
      gap: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 2rem 4%;
    }
  }
</style>
