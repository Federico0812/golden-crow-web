---
import Hero from "../layouts/Hero.astro";
import IntroPlan from "../layouts/IntroPlan.astro";
import Plan from "../layouts/Plan.astro";
import MoreToCome from "../layouts/MoreToCome.astro";
import Panels from "../layouts/Panels.astro";
import SecondSection from "../layouts/SecondSection.astro";
import ThirdSection from "../layouts/ThirdSection.astro";
import IntroAboutUs from "../layouts/IntroAboutUs.astro";
import Contact from "../layouts/Contact.astro";
import AboutUs from "../layouts/AboutUs.astro";
import Timeline from "../layouts/Timeline.astro";
import ChoosePlan from "../layouts/ChoosePlan.astro";
import Experience from "../layouts/Experience.astro";
import IntegrationProcess from "../layouts/IntegrationProcess.astro";
---

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Pocket Genes - Explore Your DNA</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
</head>
<Hero />
<SecondSection />
<ThirdSection />
<Panels />
<MoreToCome />
<IntroPlan />
<Plan />
<ChoosePlan />
<IntegrationProcess
  subtitle="Free Program"
  amount="$0"
  description="Effortless integration - convert your genomic reports to our format for instant user access to interactive, intuitive panels."
  items={[{
    icon: "data-input.svg",
    title: "DATA INPUT FORMATTING",
    description: "We collaborate with you to define the data structure and visual presentation, ensuring your reports are engaging and easy to explore."
  },{
    icon: "test-launch.svg",
    title: "TEST AND LAUNCH",
    description: "We collaborate with you to define the data structure and visual presentation, ensuring your reports are engaging and easy to explore."
  },{
    icon: "user-feedback.svg",
    title: "USER ACCESS AND FEEDBACK",
    description: "We collaborate with you to define the data structure and visual presentation, ensuring your reports are engaging and easy to explore."
  },
  ]}
/>
<IntegrationProcess
  subtitle="Plus Program"
  amount="$500"
  description="The Plus Plan delivers a high level of customization, featuring branded integration, tailored data formatting, and custom features all within the app."
  items={[{
    icon: "collaborative-input.svg",
    title: "COLLABORATIVE DATA INPUT",
    description: "We collaborate with you to define the data structure and visual presentation, ensuring your reports are engaging and easy to explore."
  },{
    icon: "custom-features.svg",
    title: "CUSTOM FEATURES",
    description: "We collaborate with you to define the data structure and visual presentation, ensuring your reports are engaging and easy to explore."
  },{
    icon: "support-maintenance.svg",
    title: "ACTIVE SUPPORT AND MAINTENANCE",
    description: "We collaborate with you to define the data structure and visual presentation, ensuring your reports are engaging and easy to explore."
  },]}
/>
<Experience />
<IntroAboutUs />
<Timeline />
<AboutUs />
<Contact />

<style>
  :root {
    /* Modern DNA-inspired color palette */
    --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    --accent-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    --success-gradient: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
    --warning-gradient: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
    
    /* Neutral colors with depth */
    --dark-bg: #0a0e27;
    --dark-surface: #1a1f3a;
    --dark-elevated: #2d3561;
    --text-primary: #ffffff;
    --text-secondary: #b8c5d1;
    --text-accent: #64b5f6;
    
    /* Glass effect variables */
    --glass-bg: rgba(255, 255, 255, 0.1);
    --glass-border: rgba(255, 255, 255, 0.2);
    --glass-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
    
    /* Spacing system */
    --space-xs: 0.5rem;
    --space-sm: 1rem;
    --space-md: 1.5rem;
    --space-lg: 2rem;
    --space-xl: 3rem;
    --space-2xl: 4rem;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    background: var(--dark-bg);
    background-image: 
      radial-gradient(circle at 25% 25%, #667eea20 0%, transparent 50%),
      radial-gradient(circle at 75% 75%, #764ba240 0%, transparent 50%);
    color: var(--text-primary);
    overflow-x: hidden;
    font-family: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    font-weight: 400;
    line-height: 1.6;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* Enhanced section animations */
  section {
    position: relative;
    overflow: hidden;
  }

  /* Global button styles */
  button {
    font-family: inherit;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Enhanced link styles */
  a {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Scrollbar styling */
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: var(--dark-surface);
  }

  ::-webkit-scrollbar-thumb {
    background: linear-gradient(var(--primary-gradient));
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(var(--secondary-gradient));
  }

  /* Selection styling */
  ::selection {
    background: rgba(103, 126, 234, 0.3);
    color: white;
  }
</style>
